<Window x:Class="MailSender.SendErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="ISendError" Height="450" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Error!" FontSize="32" Foreground="Red" HorizontalAlignment="Center"/>
            <TextBox x:Name="tbDescryption" Text="A Descryption of error" Height="115"/>
            <Button Width="350" Name="btnOk" Content="OK" Click="btnOk_Click"/>
        </StackPanel>
    </Grid>
</Window>
