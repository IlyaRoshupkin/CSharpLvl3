<Window x:Class="homework1.SendErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:homework1"
        mc:Ignorable="d"
        Title="SendErrorWindow" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Grid>
        <Label x:Name="lSendError" Content="Невозможно отправить письмо" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="36" Margin="0,0,0,300"/>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Center" Width="260" Height="75" FontSize="36" VerticalAlignment="Bottom" Margin="0,0,0,50" Click="btnOk_Click"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Center" Height="175" TextWrapping="Wrap" VerticalAlignment="Center" Width="705" Margin="0,0,0,50" >
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFCE4747" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>

    </Grid>
</Window>
